#include <zephyr/dt-bindings/gpio/sixtron-header.h>

&sixtron_i2c {
	status = "okay";

	// /!\ TO DO: Multiple i2c adress possible 28/29
	bno0550: bno055@28 {
		compatible = "bosch,bno055";
		reg = <0x28>;
		irq-gpios = <&sixtron_connector WKUP (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
		use_xtal;
	};
};
