    bool "Low Power"
    depends on BNO055_MAG_CUSTOM_CONFIG

config BNO055_MAG_REGULAR_MODE
    bool "Regular"
    depends on BNO055_MAG_CUSTOM_CONFIG

config BNO055_MAG_ENHANCED_REGULAR_MODE
    bool "Enhanced Regular"
    depends on BNO055_MAG_CUSTOM_CONFIG

